<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="my_robot">
<xacro:include filename="inertial_macros.xacro" />

    <material name="green">
        <color rgba="0 0.6 0 1"/>
    </material>

    <material name="grey">
        <color rgba="0.7 0.7 0.7 1"/>
    </material>

    <link name="base_footprint"/>

    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.205 0.135 0.1" />
            </geometry>
            <origin xyz="0 0 0.05" rpy= "0 0 0" />
            <material name="green" />
        </visual>

        <collision>
            <geometry>
                <box size="0.205 0.135 0.1" />
            </geometry>
            <origin xyz="0 0 0.05" rpy= "0 0 0" />
        </collision>
        <xacro:inertial_box mass="0.5" x="0.205" y="0.135" z="0.1">
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <link name="lidar">
        <visual>
            <geometry>
                <cylinder  radius="0.025" length="0.02"/>
            </geometry>
            <origin xyz="0 0 0" rpy= "0 0 0" />
            <material name="grey" />
        </visual>

        <collision>
            <geometry>
                <cylinder  radius="0.025" length="0.02"/>
            </geometry>
            <origin xyz="0 0 0" rpy= "0 0 0" />
        </collision>
        
    </link>

    <link name="left_rear_wheel">
        <visual>
            <geometry>
                <cylinder  radius="0.045" length="0.035"/>
            </geometry>
            <origin xyz="0 0 0" rpy= "1.57 0 0" />
            <material name="grey" />
        </visual>

        <collision>
            <geometry>
                <cylinder  radius="0.045" length="0.035"/>
            </geometry>
            <origin xyz="0 0 0" rpy= "1.57 0 0" />
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.035" radius="0.045">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <link name="right_rear_wheel">
        <visual>
            <geometry>
                <cylinder  radius="0.045" length="0.035"/>
            </geometry>
            <origin xyz="0 0 0" rpy= "1.57 0 0" />
            <material name="grey" />
        </visual>

        <collision>
            <geometry>
                <cylinder  radius="0.045" length="0.035"/>
            </geometry>
            <origin xyz="0 0 0" rpy= "1.57 0 0" />
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.035" radius="0.045">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <link name="left_front_wheel">
        <visual>
            <geometry>
                <cylinder  radius="0.045" length="0.035"/>
            </geometry>
            <origin xyz="0 0 0" rpy= "1.57 0 0" />
            <material name="grey" />
        </visual>

        <collision>
            <geometry>
                <cylinder  radius="0.045" length="0.035"/>
            </geometry>
            <origin xyz="0 0 0" rpy= "1.57 0 0" />
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.035" radius="0.045">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <link name="right_front_wheel">
        <visual>
            <geometry>
                <cylinder  radius="0.045" length="0.035"/>
            </geometry>
            <origin xyz="0 0 0" rpy= "1.57 0 0" />
            <material name="grey" />
        </visual>

        <collision>
            <geometry>
                <cylinder  radius="0.045" length="0.035"/>
            </geometry>
            <origin xyz="0 0 0" rpy= "1.57 0 0" />
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.035" radius="0.045">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>

    </link>

    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link" />
        <origin xyz="0 0 0.03" rpy= "0 0 0" />
    </joint>

    <joint name="base_lidar_joint" type="fixed">
        <parent link="base_link"/>
        <child link="lidar" />
        <origin xyz="0.05 0 0.11" rpy= "0 0 0" />
    </joint>

    <joint name="base_left_rear_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_rear_wheel" />
        <origin xyz="-0.08 0.085 0.015" rpy= "0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <joint name="base_left_front_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_front_wheel" />
        <origin xyz="0.08 0.085 0.015" rpy= "0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <joint name="base_right_rear_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_rear_wheel" />
        <origin xyz="-0.08 -0.085 0.015" rpy= "0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <joint name="base_right_front_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_front_wheel" />
        <origin xyz="0.08 -0.085 0.015" rpy= "0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

</robot>